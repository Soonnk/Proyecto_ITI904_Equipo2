@model Proyecto_ITI904_Equipo2.Models.Compras.Proveedor

<h1 style="text-align:center"><b>Dar baja proveedor</b></h1>

<h3 style="text-align:center"><b>¿Seguro que quieres inhabilitar a este proveedor?</b></h3>
@using (Html.BeginForm("DeleteConfirmed", "Proveedores", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <hr />
        <table class="table">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.RFC)
                </td>
                <td>
                    @Html.DisplayFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </td>
                <td>
                    <img src="@Url.Content("data:image/png;base64," + Model.ImageUrl)" alt="Imagen" width="150px" height="150px" />
                    @*@Html.DisplayFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })*@
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Estatus)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Estatus, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            <tr>
                <td>
                    Escriba la razón de del por qué se da de baja
                </td>
                <td>
                    @Html.EditorFor(model => model.Nota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nota, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
    </div>

    <input type="hidden" name="id" id="id" value="@Model.Id" />
    <input type="hidden" name="nota" id="nota" value="@Model.Nota" />

    <button type="submit" name="btnOpcion" class="btn btn-danger btn-sm">
        <i class="glyphicon glyphicon-minus"></i> Dar baja
    </button>
}

<form action="~/Proveedores/Index" method="post">
    <button type="submit" name="btnOpcion" class="btn btn-warning btn-sm">
        <i class="glyphicon glyphicon-log-out"></i> Salir
    </button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
