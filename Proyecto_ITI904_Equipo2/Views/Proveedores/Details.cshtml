@model Proyecto_ITI904_Equipo2.Models.Compras.Proveedor

<h1 style="text-align:center"><b>Detalles del proveedor</b></h1>

<div class="row">
    <div class="col-lg-12">

        <table class="table">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Nombre)
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.RFC)
                </td>
                <td>
                    @Html.DisplayFor(model => model.RFC)
                    @Html.ValidationMessageFor(model => model.RFC, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Telefono)
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Direccion)
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </td>
                <td>
                    <img src="@Url.Content("data:image/png;base64," + Model.ImageUrl)" alt="Imagen" width="150px" height="150px" />
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Estatus)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Estatus)
                    @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Nota)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Nota)
                    @Html.ValidationMessageFor(model => model.Nota, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>

        <div>
            <h1 style="text-align:center"><b>Materiales que proporciona</b></h1>
            <hr />
            <!--Añadimos el id del modelo y que det es igual a 1 para que no muestre la opción de quitar material
            al momento de mostrar los detalles y evitar que los quiten ahí-->
            @{Html.RenderAction("MostrarProveedoresMateriales", new { Model.Id, det = 1 }); }
        </div>

    </div>
</div>

<form action="~/Proveedores/Edit" method="get">
    <input type="hidden" name="id" id="id" value="@Model.Id" />
    <input type="submit" name="btnOpcion" id="btnOpcion" class="btn btn-info btn-sm" value="Editar proveedor" /> 
</form>

<br />

<form action="~/Proveedores/Index" method="post">
    <button type="submit" name="btnOpcion" class="btn btn-warning btn-sm">Salir
    </button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
