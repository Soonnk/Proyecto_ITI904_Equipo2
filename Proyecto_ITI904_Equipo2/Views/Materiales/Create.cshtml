@model Proyecto_ITI904_Equipo2.Models.Inventario.Material

<h1 style="text-align:center"><b>Añadir nuevo material</b></h1>

@using (Html.BeginForm("Create", "Materiales", FormMethod.Post))
{
    <input type="hidden" name="vistaIdProveedor" id="vistaIdProveedor" value="@ViewBag.vistaProveedor" />

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Descripción</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                

                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", @placeholder = "Precio al vendemos al cliente" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Costo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Precio al compramos al proveedor" } })
                @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Disponible al público</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DisponibleAPublico)
                    @Html.ValidationMessageFor(model => model.DisponibleAPublico, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Contenido neto</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contenido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Total de gramos, militros de un producto, ejem: 0.500" } })
                @Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Unidad Inventario</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnidadInventario, new { htmlAttributes = new { @class = "form-control", @placeholder = " Kilogramo, Litro o Pieza(s)" } })
                @Html.ValidationMessageFor(model => model.UnidadInventario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Unidad venta</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnidadVenta, new { htmlAttributes = new { @class = "form-control", @placeholder = " Gramos, Mililitros o Pieza(s)" } })
                @Html.ValidationMessageFor(model => model.UnidadVenta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar material" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}

<form action="~/Materiales/Index" method="post">
    <input type="hidden" name="mostrar" id="mostrar" value="1" />
    <button type="submit" name="btnOpcion" class="btn btn-warning btn-sm">
        Salir
    </button>
</form>

<script type="text/javascript">

</script>