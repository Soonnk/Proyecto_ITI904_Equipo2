@model Proyecto_ITI904_Equipo2.Models.Compras.Compra

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<h1 style="text-align:center"><b>Dar baja la compra</b></h1>

<h3 style="text-align:center"><b>¿Está seguro de dar de baja la siguiente compra?</b></h3>
<div class="col-lg-12">
    <hr />
    <table class="table">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.FechaSolicitud)
            </td>
            <td>
                @Html.DisplayFor(model => model.FechaSolicitud)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.FechaRecepción)
            </td>
            <td>
                @Html.DisplayFor(model => model.FechaRecepción)
            </td>
        </tr>
        <tr>
            <td>
                Proveedor
            </td>
            <td>
                @Html.DisplayFor(model => model.Proveedor.Nombre)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Recibida)
            </td>
            <td>
                @Html.DisplayFor(model => model.Recibida)
            </td>
        </tr>
    </table>

    <br />

    <div>
        @{Html.RenderAction("MostrarDetCompra", new { id = Model.Id }); }
    </div>

    @*<div>
                @Html.Action("MostrarProveedores")
        </div>*@
</div>

   @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <button type="submit" name="btnOpcion" class="btn btn-danger btn-sm">
        <i class="glyphicon glyphicon-minus"></i> Dar baja
    </button>

    <form action="~/Compras/MostrarCompras" method="post">
        <button type="submit" name="btnOpcion" class="btn btn-warning btn-sm">
            <i class="glyphicon glyphicon-log-out"></i> Salir
        </button>
    </form>
    }
