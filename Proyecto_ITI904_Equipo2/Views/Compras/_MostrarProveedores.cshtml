@model IEnumerable<Proyecto_ITI904_Equipo2.Models.Compras.Proveedor>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
@{var count = 0;}

<h4 style="text-align:center"><b>Proveedores actuales</b></h4>

<br />
<input id="buscar" type="text" class="form-control" placeholder="Filtro de búsqueda" />
<br />

<table class="table" id="TablaProveedor">
    @{bool placed = false;}

    @foreach (var item in Model)
    {

        if (count % 3 == 0)
        {
            @Html.Raw("<tr>");
            placed = true;
        }
        <td class="col-md-4">
            <form method="post" action="~/Compras/MostrarProveedoresMateriales">
                <input type="hidden" name="id" id="id" value="@item.Id" />
                <b>@Html.DisplayFor(modelItem => item.Nombre)</b>
                <br />
                <br />
                <img src="@Url.Content(item.ImageUrl)" alt="Imagen" width="100px" height="100px" />
                <br />
                <br />
                @Html.DisplayFor(modelItem => item.Nota)
                <br />
                <input type="submit" value="RealizarPedido" name="btnOpcion" class="btn btn-success btn-sm" />
            </form>
        </td>

        if (count % 3 == 2 && placed)
        {
            @Html.Raw("</tr>");
            placed = false;
        }
        count++;
    }
</table>


<script type="text/javascript">
    document.querySelector("#buscar").onkeyup = function () {
        $TableFilter("#TablaProveedor", this.value);
    }

    $TableFilter = function (id, value) {
        var rows = document.querySelectorAll(id + ' tbody td');

        for (var i = 0; i < rows.length; i++) {
            var showRow = false;

            var row = rows[i];
            row.style.display = 'none';

            for (var x = 0; x < row.childElementCount; x++) {
                if (row.children[x].textContent.toLowerCase().indexOf(value.toLowerCase().trim()) > -1) {
                    showRow = true;
                    break;
                }
            }

            if (showRow) {
                row.style.display = null;
            }
        }
    }
</script>