@model IEnumerable<Proyecto_ITI904_Equipo2.Models.Inventario.Material>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
@{var i = 0;}

<h1 style="text-align:center"><b>Productos seleccionados</b></h1>

<div class="row">

    <div class="col-lg-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Costo)
                    </th>
                    <th>
                        SubTotal
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            
               @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @ViewBag.Cantidades[i]
                        </td>
                        <td>
                            $ @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                    
                        <td>
                            $ @(Convert.ToDouble(Html.DisplayFor(modelItem => item.Precio).ToString()) * @ViewBag.Cantidades[i])
                        </td>
                        <td>
                            @Html.ActionLink("Quitar", "")
                        </td>
                    </tr>
                     i++;
                }

                <tr>
                    <td> </td>
                    <td> </td>
                    <td> </td>
                    <td>
                        <h4>Total:</h4>
                    </td>
                    <td>
                        <h4>$ @ViewBag.TotalCompras</h4>
                    </td>
                    <td> </td>
                </tr>

            </table>
    </div>

    <form method="get" action="~/Compras/AgregarNuevaCompra">
        <input type="submit" name="comprar" id="comprar" value="Comprar" />
    </form>
</div>


